<h1>Contact Page</h1>

<div class="row">
  <div class="col-md-6">
    <div class="form-group {{emailSuccess}} has-feedback">
      <label>Your email address</label>
      {{input type="email" class="form-control" placeholder="Email" value=emailAddress}}
      {{#if emailIsValid}}
      <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
      <span class="sr-only">(success)</span>
      {{/if}}
    </div>

    <div class="form-group {{messageSuccess}} has-feedback">
      <label>Your message</label>
      {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=message}}
      {{#if messageIsValid}}
      <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
      <span class="sr-only">(success)</span>
      {{/if}}
    </div>
    
    <button class="btn btn-success" disabled={{isDisabled}} {{action 'sendMessage'}}>Send</button>

  </div>
</div>




